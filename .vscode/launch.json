    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/CMakeBuild/Samples/ShaderScan/ShaderScan",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Working",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(lldb) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/CMakeBuild/Samples/ShaderScan/ShaderScan",
            "args": ["-arg1", "-arg2"],
            "cwd": "${workspaceFolder}/Working"
        }        
    ]
}